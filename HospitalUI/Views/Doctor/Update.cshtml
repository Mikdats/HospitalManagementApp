@using Entities.Concrete
@model Doctor
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h4 class="text-success">Doktor Düzenleme Sayfası</h4>
        <br />
        <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorId" />
            <div class="form-group">
                Doktor Adı
                <input asp-for="DoctorFullName" class="form-control" />
                <span asp-validation-for="DoctorFullName" class="text-danger"></span>
            </div>                      
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />                             
            </div>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>


