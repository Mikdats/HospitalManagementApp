@using Entities.DTOs
@model List<PersonelViewModel>
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Task Listesi</h2>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                
                <th>Task</th>
                <th>Tarih/Saat</th>
                <th>Hastane</th>
                <th>Doktor</th>
                <th>Branş</th>
                <th>Ne Yapıldı</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                     
                    <td>
                        @Html.DisplayFor(modelItem => item.Task)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.TaskDate)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.DoctorFullName)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.TaskId" asp-route-username="@ViewBag.Mail" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.TaskId" asp-route-username="@ViewBag.Mail" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-primary" href="~/TaskModel/Add?mail=@ViewBag.Mail" role="button">Task Ekle</a>    
</div>

@*@await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")*@

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json',
            },
        });
    });
</script>
}


