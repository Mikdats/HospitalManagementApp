@using Entities.Concrete
@model TaskModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<link rel="stylesheet" href="bootstrap.min.css">

<div class="container">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
            <h2>Personel Task Ekleme Ekranı</h2>
            @using (Html.BeginForm("Add", "TaskModel", FormMethod.Post))
            {
                @Html.Label("Task")
                @Html.TextBoxFor(b => b.Task, new { @class = "form-control" })
                <label class="text-danger">@Html.ValidationMessageFor(b => b.Task)</label>
                <br />
                @Html.Label("Tarih/Saat")
                <input type="datetime-local" class="form-control" name="TaskDate" value="2022-06-18T18:00">
                <br />
                @Html.Label("Hastane")
                @Html.DropDownListFor(x=>x.HospitalId,(List<SelectListItem>)ViewBag.hospital,new{@class="form-control"})

                <br />
                @Html.Label("Doktor")
                @Html.DropDownListFor(x=>x.DoctorId,(List<SelectListItem>)ViewBag.doktor,new{@class="form-control"})

                <br />
                @Html.Label("Branş")
                @Html.DropDownListFor(x=>x.BranchId,(List<SelectListItem>)ViewBag.branch,new{@class="form-control"})

                <br />
                @Html.Label("Ne Yapıldı")
                @Html.TextAreaFor(b => b.Description, new { @class = "form-control" })
                <span asp-validation-for="Description" class="text-danger"></span>
                <label class="text-danger">@Html.ValidationMessageFor(b => b.Description)</label>
                <br />
                <input type="hidden" name="Email" value="@ViewBag.Mail"/>

                <button class="btn btn-success">Kaydet</button>
            }
        </div>
        <div class="col-2">
        </div>
    </div>
</div>

