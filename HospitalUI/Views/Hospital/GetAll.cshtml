@using Entities.Concrete
@model List<Hospital>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
     <h2>Hastane Listesi</h2>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>Hastaneler</th> 
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.HospitalId" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.HospitalId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-primary" href="~/Hospital/Add" role="button">Hastane Ekle</a>
    <a class="btn btn-danger" href="~/UserManagement/Index" role="button">Geri Dön</a>
</div>

@*@await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")*@

@section Scripts{
<script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json',
                },
            });
        });
 </script>
}
