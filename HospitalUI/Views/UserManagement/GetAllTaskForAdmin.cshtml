@using Entities.DTOs
@model List<AdminViewModel>
@{
    ViewData["Title"] = "GetAllTaskForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Task Listesi</h2>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>Ekleyen Kullanıcı</th>               
                <th>Task</th>
                <th>Tarih/Saat</th>
                <th>Hastane</th>
                <th>Doktor</th>
                <th>Branş</th>
                <th>Ne Yapıldı</th>
                <th>Yorum</th>
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Task)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentName)
                    </td>
                    <td>
                        <a asp-action="GetTaskForAdminComment" asp-route-id="@item.TaskId" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Yorum Yap</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <a class="btn btn-danger" href="~/UserManagement/Index" role="button">Geri Dön</a>
</div>

@*@await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")*@

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json',
            },
        });
    });
</script>
}




